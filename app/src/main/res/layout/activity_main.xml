    android:textStyle="bold"
    android:textSize="23sp"
    android:layout_margin="25dp"
    />
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Valor da conta:"
    android:layout_marginStart="12dp"
